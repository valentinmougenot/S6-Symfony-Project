{% extends 'layout.html.twig' %}

{% block title %}Modification du profil{% endblock %}

{% block main %}
<div class="flex items-center justify-center min-h-screen bg-gray-100 py-12 px-4 sm:px-6 lg:px-8 w-full">
    <div class="max-w-md w-full bg-white p-8 rounded-lg shadow-md">

        <h1 class="text-2xl font-bold mb-6 text-center">Modification du profil</h1>

        {{ form_start(editForm, { 'attr': { 'class': 'space-y-6' } }) }}
            <div class="space-y-4">
                <div>
                    {{ form_label(editForm.firstName, null, { 'label_attr': { 'class': 'block text-sm font-medium text-gray-700' } }) }}
                    {{ form_widget(editForm.firstName, { 'attr': { 'class': 'mt-1 block w-full border border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm' } }) }}
                </div>
                <div>
                    {{ form_label(editForm.lastName, null, { 'label_attr': { 'class': 'block text-sm font-medium text-gray-700' } }) }}
                    {{ form_widget(editForm.lastName, { 'attr': { 'class': 'mt-1 block w-full border border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm' } }) }}
                </div>
                <div>
                    {{ form_label(editForm.email, null, { 'label_attr': { 'class': 'block text-sm font-medium text-gray-700' } }) }}
                    {{ form_widget(editForm.email, { 'attr': { 'class': 'mt-1 block w-full border border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm' } }) }}
                </div>
            </div>

            {% if errorCount > 0 %}
                <div class="alert-danger">
                    {{ form_errors(editForm.firstName) }}
                    {{ form_errors(editForm.lastName) }}
                    {{ form_errors(editForm.email) }}
                </div>
            {% endif %} 

            <div class="mt-6">
                <button type="submit" class="w-full bg-blue-700 hover:bg-blue-900 text-white font-bold py-2 px-4 rounded">
                    Modifier
                </button>
            </div>
        {{ form_end(editForm) }}
    </div>
</div>
{% endblock %}
